<%= form_with(model: portfolio_item, local: true) do |form| %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, id: :portfolio_title, class:"form-control" %>
      </div>

        <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, id: :portfolio_subtitle, class:"form-control" %>
      </div>
      
      <div class="form-group">
        <%= form.file_field :main_image %>
      </div>
      <div class="form-group">
        <%= form.file_field :thumb_image %>
      </div>
      
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, id: :portfolio_body, rows:15, class:"form-control" %>
      </div>
    </div>
  </div>

  <hr>

  <h3>Technologies Used:</h3>

  <div class="form-group">
    <%= form.fields_for :technologies do |technology_form| %>
    <div class="form-group">
      <%= technology_form.label :name %>
      <%= technology_form.text_field :name, class:"form-control" %>
    </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit 'Save Portfolio Item', class:"btn btn-primary btn-block" %>
  </div>
<% end %>
